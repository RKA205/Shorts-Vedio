<!doctype html>
<html lang="hi">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>Realistic Bouncing Ball (HTML + CSS)</title>
<style>
  /* Page reset + center */
  * { box-sizing: border-box; margin: 0; padding: 0; }
  html,body { height: 100%; background: linear-gradient(#e9f4ff,#f6fbff); font-family: system-ui, Arial; }

  .stage {
    height: 100vh;
    display: grid;
    place-items: center;
    perspective: 1000px; /* subtle 3D feeling */
  }

  /* ground / floor */
  .floor {
    position: relative;
    width: min(900px, 90%);
    height: 260px;
    border-radius: 14px;
    background:
      linear-gradient(180deg, rgba(0,0,0,0.03), rgba(0,0,0,0.02)) ,
      linear-gradient(0deg, rgba(255,255,255,0.6), rgba(255,255,255,0.2));
    box-shadow: 0 18px 40px rgba(20,30,40,0.12), inset 0 1px 0 rgba(255,255,255,0.35);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 34px; /* space to bounce */
    overflow: visible;
  }

  /* shadow under the ball */
  .shadow {
    position: absolute;
    bottom: 30px;
    width: 160px;
    height: 22px;
    border-radius: 50%;
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.35) 0%, rgba(0,0,0,0.15) 40%, rgba(0,0,0,0.02) 100%);
    transform-origin: center;
    filter: blur(6px);
    transition: opacity .2s linear;
    z-index: 1;
    animation: shadowPulse 1.6s cubic-bezier(.2,.9,.3,1) infinite;
  }

  /* the ball */
  .ball {
    position: relative;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    z-index: 2;
    transform-origin: center bottom;
    /* nice glossy spherical look using multiple radial gradients */
    background:
      radial-gradient(circle at 30% 20%, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.5) 8%, rgba(255,255,255,0.12) 12%),
      radial-gradient(circle at 70% 65%, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0.02) 10%),
      radial-gradient(circle at 20% 80%, rgba(0,0,0,0.06) 0%, rgba(0,0,0,0.00) 30%),
      linear-gradient(135deg, #ff7a59 0%, #ff4f70 50%, #8f4bff 100%);
    box-shadow:
      0 22px 40px rgba(30,30,60,0.12),
      0 6px 14px rgba(20,20,40,0.08) inset;
    /* small glossy rim */
    border: 1px solid rgba(255,255,255,0.08);
    animation: bounce 1.6s cubic-bezier(.2,.9,.3,1) infinite;
    will-change: transform;
  }

  /* Add a thin highlight stripe rotating with the ball to simulate spin */
  .ball::after {
    content: "";
    position: absolute;
    inset: 14% 40% 14% 40%;
    border-radius: 999px;
    background: linear-gradient(180deg, rgba(255,255,255,0.25), rgba(255,255,255,0.06));
    transform-origin: center;
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  /* Keyframes: ball bounce + squash/stretch + rotation */
  @keyframes bounce {
    0% {
      transform: translateY(0) rotate(0deg) scaleX(1) scaleY(1);
      animation-timing-function: cubic-bezier(.2,.9,.3,1);
    }
    20% { /* rising */
      transform: translateY(-230px) rotate(-12deg) scaleX(0.98) scaleY(1.02);
    }
    38% { /* peak */
      transform: translateY(-310px) rotate(-22deg) scaleX(0.96) scaleY(1.04);
    }
    48% { /* falling quickly toward floor */
      transform: translateY(-40px) rotate(-46deg) scaleX(1.02) scaleY(0.98);
    }
    50% { /* impact: strong squash */
      transform: translateY(0) rotate(-60deg) scaleX(1.18) scaleY(0.78);
    }
    60% { /* rebound: stretch vertically */
      transform: translateY(-140px) rotate(-92deg) scaleX(0.95) scaleY(1.06);
    }
    80% {
      transform: translateY(-60px) rotate(-120deg) scaleX(1.03) scaleY(0.98);
    }
    100% {
      transform: translateY(0) rotate(-160deg) scaleX(1) scaleY(1);
    }
  }

  /* Shadow changes size + opacity when ball is high/low */
  @keyframes shadowPulse {
    0%   { transform: scaleX(1); opacity: 1; }
    20%  { transform: scaleX(0.55); opacity: 0.45; }
    38%  { transform: scaleX(0.35); opacity: 0.28; }
    48%  { transform: scaleX(0.55); opacity: 0.5; }
    50%  { transform: scaleX(1.28); opacity: 1; } /* impact -> bigger/darker shadow */
    60%  { transform: scaleX(0.62); opacity: 0.45; }
    80%  { transform: scaleX(0.85); opacity: 0.6; }
    100% { transform: scaleX(1); opacity: 1; }
  }

  /* small responsiveness */
  @media (max-width:520px){
    .ball { width: 96px; height: 96px; }
    .shadow { width: 110px; height: 16px; bottom: 22px; }
    .floor { height: 200px; padding-bottom: 22px; }
    @keyframes bounce {
      20% { transform: translateY(-150px) rotate(-12deg) scaleX(0.98) scaleY(1.02); }
      38% { transform: translateY(-210px) rotate(-22deg) scaleX(0.96) scaleY(1.04); }
    }
  }
</style>
</head>
<body>
  <div class="stage">
    <div class="floor">
      <div class="shadow"></div>
      <div class="ball" aria-hidden="true"></div>
    </div>
  </div>
</body>
</html>
